#include<stdio.h>
int main(){
    int day;
    printf("Enter day :");
    scanf("%d",&day);

    switch (day){
        case 1 : printf("Monday\n");
                break;
        case 2 : printf("Tuesday\n");
                break;
        case 3 : printf("Wednusday\n");
                break;
        case 4 : printf("Thursday\n");
                break;
        case 5 : printf("Fridey\n");
                break;
        case 6 : printf("Saturday\n");
                break;
        case 7 : printf("Sunday\n");
                break;
        default : printf("Not valid\n");
                break;
        return 0;
    }
}
